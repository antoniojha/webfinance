<%vehicle_type=Order::FINANCIAL_CATEGORIES_HASH.key(interest.titleize)%>
  <%products=Product.where(vehicle_type:vehicle_type)%>
  <%=render partial:"shared/home_goal_intro", locals:{interest:interest, products:products}%>
  <nav>
  <ul class="pager">
    <li role="presentation"><%=link_to "Financial Story","#", id:"financial_stories"%></li>
    <li role="presentation"><%=link_to "Financial Testimony","#", id: "financial_testimonies"%></li>
  </ul>
  </nav>
    <div class="panel panel-default">
      <div class="panel-body" align="left">
        <table width="100%" style="text-align:center;">
          <%size=products.size%>
          <%products.each_with_index do |product,index|%>
            <%if index%2==0 && (index+1<size)%>
            <tr>
              <td width="50%" class="panel panel-primary" style="margin:5px; vertical-align:text-top;">
                <h3>
                  <span class="label label-primary vehicle-heading">
             
                    <%=content_tag(:a,product.name.titleize,name:"#{product.name}", title:product.description)%>
                  </span>
                </h3>
                <div class="panel-body home_display" align="left">

                  <%=render partial:"shared/home_stories", locals:{product:product, interest:interest}%>
                  <%=render partial:"shared/home_testimonies", locals:{product:product, interest:interest}%>
                </div>
              </td>
            <%elsif index%2==1%>
              <td width="50%" class="panel panel-primary" style="margin:5px; vertical-align:text-top;">
                <h3>
                  <span class="label label-primary vehicle-heading">
                    <%=content_tag(:a,product.name.titleize,name:"#{product.name}", title:product.description)%>
                  </span>
                </h3>
                <div class="panel-body" align="left" width="100%">
               
                  <%=render partial:"shared/home_stories", locals:{product:product, interest:interest}%>
                  <%=render partial:"shared/home_testimonies", locals:{product:product, interest:interest}%>
                </div>
              </td>
            </tr>
            <%elsif index%2==0 && (index+1==size)%>
            <tr>
              <td width="50%" class="panel panel-primary" style="margin:5px; vertical-align:text-top;">
                <h3>
                  <span class="label label-primary vehicle-heading">
                    <%=content_tag(:a,product.name.titleize,name:"#{product.name}", title:product.description)%>
                  </span>
                </h3>
                <div class="panel-body" align="left">
              
                  <%=render partial:"shared/home_stories", locals:{product:product, interest:interest}%>
                  <%=render partial:"shared/home_testimonies", locals:{product:product, interest:interest}%>
                </div>
              </td>
              <td width="50%"></td>
            </tr>
            <%end%>
          <%end%>
        </table>
      </div>
    </div>