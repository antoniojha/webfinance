<% if @request && @request.errors.any? %>

    <div class="alert alert-danger error-message">
      <h2>The form contains <%= pluralize(@request.errors.count, "error") %></h2>
      <ul>
        <% @request.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>

  <% end %>