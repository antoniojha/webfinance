<%if @product_relation.new_record?%>
  <%=form_for @product_relation, url:admin_product_relations_path do |f|%>

  <table width="70%">
    <tr>
      <td><%=f.label "Financial Category"%></td>
    </tr>
    <tr>
      <td><%=f.select :vehicle_type, Order::FINANCIAL_CATEGORIES, {},{:class=>'form-control'} %></td>

    </tr>
    <tr>
      <td><%=f.label "Why is it related to the category"%></td>
    </tr>
    <tr>
      <td><%=f.text_area :description,{:class=>'form-control'}%></td>
    </tr>
    <tr class="blank_row"></tr>
    <tr>
      <td><%=f.submit "Create Relation", class:"btn btn-default"%></td>
    </tr>
  </table>
  <%=f.hidden_field :product_id, value:@product.id%>
  <%end%>
<%else%>
<%=form_for @product_relation, url:admin_product_relation_path(@product_relation), method: :patch do |f|%>

  <table width="70%">
    <tr>
      <td><%=f.label "Financial Category"%></td>
    </tr>
    <tr>
      <td><%=f.select :vehicle_type, Order::FINANCIAL_CATEGORIES, {},{:class=>'form-control'} %></td>

    </tr>
    <tr>
      <td><%=f.label "Why is it related to the category"%></td>
    </tr>
    <tr>
      <td><%=f.text_area :description,{:class=>'form-control'}%></td>
    </tr>
    <tr class="blank_row"></tr>
    <tr>
      <td><%=f.submit "Update Relation", class:"btn btn-default"%></td>
    </tr>
  </table>
  <%=f.hidden_field :product_id, value:@product.id%>
  <%end%>
<%end%>