<% if @product_relation.errors.any? %>

    <div class="alert alert-danger error-message">
      <h2>The form contains <%= pluralize(@product_relation.errors.count, "error") %></h2>
      <ul>
        <% @product_relation.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>

<% end %>