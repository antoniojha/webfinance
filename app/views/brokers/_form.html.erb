
<%=form_for @broker do |f|%>
<table width="70%">
  <tr>
    <td width="30%"><%=f.label :first_name, "First Name"%><%=asterisk_html%></td>
    <td width="70%"><%=f.text_field :first_name,{:class=>'form-control'}%></td>
  </tr>
  <tr class="blank_row"></tr>
  <tr>
    <td><%=f.label :last_name, "Last Name"%><%=asterisk_html%></td>
    <td><%=f.text_field :last_name,{:class=>'form-control'}%></td>
  </tr>
  <tr class="blank_row"></tr>

  <tr>
    <td><%=f.label :institution_name, "Company Name"%><%=asterisk_html%></td>
    <td><%=f.text_field :institution_name,{:class=>'form-control'}%></td>
  </tr>
  <tr class="blank_row"></tr> 
</table>
<table width="70%">
  <tr>
    <td width="30%"><%=f.label "Work Address"%><%=asterisk_html%></td>
    <td width="10%"><%=f.label :street%></td>
    <td width="60%" colspan="3"><%=f.text_field :street,{:class=>'form-control'}%></td>

  </tr>
  <tr class="blank_row"></tr>
  <tr>
    <td width="30%"></td>
    <td width="10%"><%=f.label :city%></td>
    <td width="25%"><%=f.text_field :city,{:class=>'form-control'}%></td>
    <td width="10%" align="center"><%=f.label :state%></td>
    <td width="25%"><%=f.text_field :state,{:class=>'form-control'}%></td>
  </tr>
  <tr class="blank_row"></tr>
</table>
<table width="70%">
  <tr>
    <td width="30%"><%=f.label :phone_number_work, "Phone Number(Work)"%><%=asterisk_html%></td>
    <td width="10%"><%=f.text_field :phone_work_1,{maxlength: 3,:class=>'form-control'}%></td>
    <td width="5%" align="center">-</td>
    <td width="10%"><%=f.text_field  :phone_work_2,{maxlength: 3,:class=>'form-control'}%></td>
    <td width="5%" align="center">-</td>
    <td width="12%"><%=f.text_field :phone_work_3,{maxlength: 4,:class=>'form-control'}%></td>
    <td width="16%" align="center"><%=f.label :work_ext, "Ext."%></td>
    <td width="12%"><%=f.text_field :work_ext,{maxlength: 4,:class=>'form-control'}%></td>
  </tr>  
  <tr class="blank_row"></tr> 
  <tr>
    <td width="30%"><%=f.label :phone_number_cell, "Phone Number(Cell)"%><%=asterisk_html%></td>
    <td width="10%"><%=f.text_field :phone_cell_1,{maxlength: 3,:class=>'form-control'}%></td>
    <td width="5%" align="center">-</td>
    <td width="10%"><%=f.text_field :phone_cell_2,{maxlength: 3,:class=>'form-control'}%></td>
    <td width="5%" align="center">-</td>
    <td width="12%"><%=f.text_field :phone_cell_3,{maxlength: 4,:class=>'form-control'}%></td>  
    <td width="28%" colspan=2></td>
  </tr> 
  <tr class="blank_row"></tr> 
</table>
<table width="70%">
  <tr>
    <td width="30%"><%=f.label :web,"Web URL"%><b><i> (Optional)</i></b></td>
    <td width="70%"><%=f.text_field :web,{:class=>'form-control'}%></td>
  </tr> 
  <tr class="blank_row"></tr> 
  <tr>
    <td width="30%"><%=f.label :username%><%=asterisk_html%></td>
    <td width="70%"><%=f.text_field :username,{:class=>'form-control'}%></td>
  </tr> 
  <tr class="blank_row"></tr> 
  <tr>
    <td width="30%"><%=f.label :email%><%=asterisk_html%></td>
    <td width="70%"><%=f.text_field :email,{:class=>'form-control'}%></td>
  </tr> 
  <tr class="blank_row"></tr> 
  <% if f.object.password_digest.present?%>
    <tr>
    <td colspan=2>
      <div class="alert alert-danger" role="alert">
      Your Password has already been saved, you don't need to re-enter it unless you want to change your original password.
      </div>
    </td>
  </tr>
  <%end%>
  <tr>
  	<td><%= f.label :password %><%=asterisk_html%></td>
  	<td><%= f.password_field :password,{:class=>'form-control'} %></td>
  </tr>
  <tr class="blank_row"></tr> 
  
	<tr>
    <td><%= f.label :password_confirmation, "Password Confirmation" %><%=asterisk_html%></td>
  	<td><%= f.password_field :password_confirmation,{:class=>'form-control'} %></td>
  </tr>
  <tr class="blank_row"></tr> 
</table>
<table width="70%">
  <tr>
    <td colspan=4><b>Please select the license that you would need to sell your products</b><%=asterisk_html%></td>
  </tr>
  <!-- Research here for various financial licenses http://www.investopedia.com/articles/financialcareers/07/securities_licenses.asp-->
  <%array=@broker.license_type%>

  <tr>
    <td><%=f.check_box("license_type", {:multiple => true,checked:array.include?("1")},"1",nil)%><%=f.label "Life Insurance License"%></td>
    <td><%=f.check_box("license_type", {:multiple => true,checked:array.include?("2")},"2",nil)%><%=f.label "Health Insurance License"%></td>
  </tr>
  <tr>
    <td><%=f.check_box("license_type", {:multiple => true,checked:array.include?("3")},"3",nil)%><%=f.label "Series 6"%></td>
    <td><%=f.check_box("license_type", {:multiple => true,checked:array.include?("4")},"4",nil)%><%=f.label "Series 7"%></td>
  </tr>

  <tr>
    <% if @broker.new_record?%>
    <td colspan=2><%=f.submit "Next",:class=>"btn btn-primary"%></td>
    <%else%>
    <td colspan=2><%=f.submit "Next",name:"broker_new_next",:class=>"btn btn-primary"%></td>
    <%end%>
    <td></td>
  </tr>
</table>
<%end%>