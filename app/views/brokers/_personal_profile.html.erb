           <%=@broker.ad_statement%>
          <%end%>
          <h4>Skills & Specialties
            <%=link_to broker_path(id:@broker, edit:"skills") do%>
              <span class="glyphicon glyphicon-edit"></span>
            <%end%>
          </h4>
          <%if @edit=="skills"%>
            <%=form_for @broker do |f|%>
              <%=f.text_area :ad_statement, {class:"form-control"}%>
              <%=f.submit%>
            <%end%>
          <%else%>
            <%=@broker.skills%>
          <%end%>
