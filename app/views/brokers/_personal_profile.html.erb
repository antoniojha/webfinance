<table width="100%">
  <tr>
    <td width="50%" class="panel panel-default">
        <div class="panel-body" align="left">
          <h4>About me 
            <%=link_to broker_path(id:@broker,edit:"about") do%>
              <span class="glyphicon glyphicon-edit"></span>
            <%end%>
