<% content_for :title do %>|Personal<%end%>
<div style="float:left; width:30%;padding-top:25px;" align="left">
  <% if !@broker.image_url.to_s.empty?%> 
    <%= content_tag "div", id: "picture_form", data: {picture_file_name: @broker.image_url.to_s,crop:@crop}, style:"float:left; width:40%;",align:"left" do %>
  <%=render "brokers/image/picture_form"%>
    <% end %>
  <%else%>
    <div id="picture_form">
      <%=render "brokers/image/picture_form"%>  
    </div>
  <%end%>
</div>
<div id ="profile_infos" align="left" style="overflow: auto;padding:5px;">
  <%=render partial:"brokers/profile/profile_infos", locals:{mode:"personal"}%>
</div>
<div style="clear:both;"></div>
<div id="personal_info">
  <table width="100%" style="border-spacing: 5px;">
    <tr>   
      <td width="70%" align="left" style="padding:5px;border: 1px ridge;vertical-align:top;">

        <div id="abouts">
          <%=render partial:"brokers/profile/abouts",locals:{mode:"personal"}%>
        </div>
        <div id="skills">
          <%=render partial:"brokers/profile/skills",locals:{mode:"personal"}%>
        </div>
        <div id="licenses">
          <%=render partial:"brokers/profile/licenses",locals:{mode:"personal"}%>
        </div>
        <div id="financial_vehicles">
          <%=render partial:"brokers/profile/financial_vehicles",locals:{mode:"personal"}%>
        </div>      
        <div id="educations">
          <%=render partial:"brokers/profile/educations",locals:{mode:"personal"}%>
        </div>           
        <div id="experiences">
          <%=render partial:"brokers/profile/experiences",locals:{mode:"personal"}%>
        </div>   
        <div id="financial_stories">   
          <%=render partial:"brokers/profile/financial_stories",locals:{mode:"personal"}%>
        </div>  
      </td>
      <td width="30%" align="left" style="padding:5px;vertical-align:top;border: 1px ridge;">

      </td>
    </tr>
  </table>
</div>
<div class="dialog-forms">
  <div id="license_dialog_form" title="Edit License" style="text-align:center;">
    <%=render "brokers/edit/license_edit"%>
  </div>  
  <div id="financial_vehicle_dialog_form" title="Edit Financial Vehicle">
    <%=render "brokers/edit/financial_vehicle_edit"%>
  </div>
  <div id="fin_product_add_dialog_form" title="Add Financial Product">
    <%=render "brokers/modal/fin_product_add_form"%>
  </div>
  <div id="fin_product_edit_dialog_form" title="Edit Financial Product">

  </div>
  <div id="education_add_dialog_form" title="Add Education">
    <%=render "brokers/modal/education_add_form"%>
  </div>
  <div id="education_edit_dialog_form" title="Edit Education">

  </div>  
  <div id="experience_add_dialog_form" title="Add Experience">
    <%=render "brokers/modal/experience_add_form"%>
  </div>
  <div id="experience_edit_dialog_form" title="Edit Experience">

  </div>  
  <div id="fin_story_add_dialog_form" title="Create a Financial Story">
    <%=render "brokers/modal/fin_story_add_form"%>
  </div>    
  <div id="fin_story_edit_dialog_form" title="Edit Experience">

  </div>    
  <%if !@broker.image_url.to_s.empty?%>
    <div id="change_dialog_form">
      <%=render "brokers/image/change_dialog_form"%>
    </div>
  <%else%>
    <div id="upload_dialog_form">
      <%=render "brokers/image/upload_dialog_form"%>
    </div>
  <%end%>  
</div>
