<div id="experience_error_msg">

</div>
<%=form_for @experience, html:{class:"experience_edit_form"} do |f|%> 
<table width="100%" style="text-align:left;">
  <tr>
    <th>Start Date</th>
    <th>End Date</th>
  </tr>
  <tr>
    <td><%=f.date_select :begin_date,{:start_year => Date.current.year, :end_year => 1960,discard_day: true}%></td>
    <%if f.object.current_experience%>
    <td>Present</td>
    <%else%>
    <td><%=f.date_select :end_date,:start_year => Date.current.year, :end_year => 1960,discard_day: true, include_blank: true%></td>    
    <%end%>
  </tr>
</table><br>
<table width="100%" style="text-align:left;vertical-align:top;">
  <tr>
    <td><%=f.label "Company"%></td>
    <td><%=f.text_field :company, {style:"width:100%;"}%></td>
  </tr>
  <tr class="blank_row_small"></tr>
  <tr>
    <td width="40%"><%=f.label "Title"%></td>
    <td width="60%"><%=f.text_field :title, {style:"width:100%;"}%></td>
  </tr>
  <tr class="blank_row_small"></tr>
  <tr>
    <td style="vertical-align:top;"><%=f.label "Location"%></td>
    <td><%=f.text_area :location, {style:"width:100%;"}%></td>
  </tr>
  <tr class="blank_row_small"></tr>
  <tr>
    <td style="vertical-align:top;"><%=f.label "Description"%></td>
    <td><%=f.text_area :description, {style:"width:100%;"}%></td>
  </tr>
  <tr>
    <td><%=f.submit "Update"%></td>
    <td></td>
  </tr>
</table>
<%end%>

<table width="100%">
  <tr>
    <td width="40%"></td>
    <td width="60%" align="right">
      <%unless @experience.current_experience%>
      <div style="position:relative;top:-25px;"><%=button_to "Delete", {controller:"experiences",action:"destroy", id:@experience.id},method: :delete, form_class:"delete_experience_form"%></div>
      <%end%>
    </td>
  </tr>
</table>
