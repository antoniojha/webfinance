<div id="education_error_msg">

</div>
<%=form_for @education, html:{class:"education_edit_form"} do |f|%> 
<table width="100%" style="text-align:left;">
  <tr>
    <th>Start Date</th>
    <th>End Date</th>
  <tr>
    <td><%=f.date_select :begin_date,{:start_year => Date.current.year, :end_year => 1960,discard_day: true}%></td>
    <td><%=f.date_select :end_date,:start_year => Date.current.year, :end_year => 1960,discard_day: true, include_blank: true%></td>    
  </tr>
</table><br>
<table width="100%" style="text-align:left;">
  <tr>
    <td width="40%"><%=f.label "School_Name"%></td>
    <td width="60%"><%=f.text_field :school, {style:"width:100%;"}%></td>
  </tr>
  <tr class="blank_row_small"></tr>
  <tr>
    <td><%=f.label "Degree_Name"%></td>
    <td><%=f.text_field :degree, {style:"width:100%;"}%></td>
  </tr>
  <tr class="blank_row_small"></tr>
  <tr>
    <td><%=f.label "Honors"%></td>
    <td><%=f.text_field :honors, {style:"width:100%;"}%></td>
  </tr>
  <tr class="blank_row_small"></tr>
  <tr>
    <td style="vertical-align:top;"><%=f.label "Details"%></td>
    <td><%=f.text_area :description, {style:"width:100%;"}%></td>
  </tr>
  <tr>
    <td><%=f.submit "Update"%></td>
    <td></td>
  </tr>
</table>
<%end%>

<table width="100%">
  <tr>
    <td width="40%"></td>
    <td width="60%" align="right"><div style="position:relative;top:-25px;"><%=button_to "Delete", {controller:"educations",action:"destroy", id:@education.id},method: :delete, form_class:"delete_education_form"%></div></td>
  </tr>
</table>