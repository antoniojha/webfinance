<div id="experience_error_msg">

</div>
<%@experience=Experience.new%>
<%=form_for @experience,html:{id:"experience_add_form"} do |f|%>
  <table width="100%" style="text-align:left;">
    <tr>
      <th>Start Date</th>
      <th>End Date</th>
    <tr>
      <td><%=f.date_select :begin_date,{:start_year => Date.current.year, :end_year => 1960,discard_day: true, include_blank: true}%></td>
      <td><%=f.date_select :end_date,:start_year => Date.current.year, :end_year => 1960,discard_day: true%></td>    
    </tr>
  </table><br>
  <table width="100%" style="text-align:left;">
    <tr>
      <td width="40%"><%=f.label "Company"%></td>
      <td width="60%"><%=f.text_field :company, {style:"width:100%;"}%></td>
    </tr>
    <tr class="blank_row_small"></tr>
    <tr>
      <td><%=f.label "Title"%></td>
      <td><%=f.text_field :title, {style:"width:100%;"}%></td>
    </tr>
    <tr class="blank_row_small"></tr>
    <tr>
      <td><%=f.label "Location"%></td>
      <td><%=f.text_area :location, {style:"width:100%;"}%></td>
    </tr>
    <tr class="blank_row_small"></tr>
    <tr>
      <td><%=f.label "Details"%></td>
      <td><%=f.text_area :description, {style:"width:100%;"}%></td>
    </tr>
    <tr>
      <td><%=f.submit "Add"%></td>
      <td><%=f.hidden_field :broker_id, value: @broker.id%>
        <%=f.hidden_field :edit, value: "experience_add"%>
      </td>
    </tr>
  </table>
<%end%>