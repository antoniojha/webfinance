
  <div class="profile_info">
    
    <%if @edit=="profile_info"%>
    <div style="float:left;">
      <h1><%=full_name(@broker)%>
        <%=link_to broker_path(id:@broker),id: "profile_info_edit", remote:true do%>
          <span class="glyphicon glyphicon-edit"></span>
        <%end%>
      </h1> 
      <h4><%=@broker.title%> at <%=@broker.company_name%></h4>
    </div>
    <div style="overflow:auto;padding:20px;">        
      <h4><span class="label label-primary">0 Recommendations</span></h4>
      <h4><span class="label label-primary">0 Upvotes</span></h4>
    </div>
    <div style="clear:both;"></div>
    
    <%=form_for @broker, remote:true do |f|%>
        <table width="100%">
          <tr>
            <td width="90%">
              <table width="100%">
                <tr>
                  <td width="40%">Location:</td>
                  <td width="60%"><%=@broker.company_location%></td>
                </tr>
                <tr>
                  <td>Email:</td>
                  <td><%=@broker.email%></td>
                </tr>
                <tr>
                  <td>Phone Number (Work):</td>
                  <td><%=f.text_field :phone_number_work, {style:"width:100%;"}%></td>
                </tr>
                <tr>
                  <td>Phone Number (Cell):</td>
                  <td><%=f.text_field :phone_number_cell, {style:"width:100%;"}%></td>
                </tr>
                <tr>
                  <td>URL:</td>
                  <td><%=f.text_field :web, {style:"width:100%;"}%></td>
                </tr>
              </table> 
            </td>
            <td width="10%" style="vertical-align:bottom;"><%=f.submit "Edit", {class: "btn btn-default"}%></td>
          </tr>
        </table>
      <%end%>
    <%else%>
    <div style="float:left;">
      <h1><%=full_name(@broker)%>
        <%=link_to broker_path(id:@broker,edit:"profile_info"), id: "profile_info_edit", remote:true do%>
          <span class="glyphicon glyphicon-edit"></span>
        <%end%>
      </h1> 

      <h4><%=@broker.title%> at <%=@broker.company_name%></h4>
    </div>
    <div style="overflow:auto;padding:20px;">        
      <h4><span class="label label-primary">0 Recommendations</span></h4>
      <h4><span class="label label-primary">0 Upvotes</span></h4>
    </div>
      <table width="100%">
        <tr>
          <td width="90%">
            <table width="100%">
              <tr>
                <td width="40%">Location:</td>
                <td width="60%"><%=@broker.company_location%></td>
              </tr>
              <tr>
                <td>Email:</td>
                <td><%=@broker.email%></td>
              </tr>
              <tr>
                <td>Phone Number (Work):</td>
                <td><%=phone_num_display(@broker.phone_number_work)%></td>
              </tr>
              <tr>
                <td>Phone Number (Cell):</td>
                <td><%=phone_num_display(@broker.phone_number_cell)%></td>
              </tr>
              <tr>
                <td>URL:</td>
                <td><a href=<%="#{@broker.web}"%>><%=@broker.web%></a></td>
              </tr>
            </table>
          </td>
          <td width="10%">
            
          </td>
        </tr>
      </table>
    <%end%>
  </div>