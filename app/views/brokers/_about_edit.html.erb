
<%if @edit=="about"%>
  <h4>About me 
    <%=link_to broker_path(id:@broker), remote: true do%>
    <span class="glyphicon glyphicon-edit"></span>
    <%end%>
  </h4>
  <%=form_for @broker do |f|%>
  <%=f.text_area :ad_statement, {class:"form-control"}%>
  <%=f.submit "Edit", class:"btn btn-default"%>
  <%end%>

<%else%>
<h4>About me 
  <%=link_to broker_path(id:@broker,edit:"about"), remote: true do%>
  <span class="glyphicon glyphicon-edit"></span>
  <%end%>
</h4>
<%=@broker.ad_statement%>
<%end%>