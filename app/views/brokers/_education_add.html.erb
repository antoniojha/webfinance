

<%if @edit=="education_add"%>
  <%=render "brokers/error_education"%>
  <%=link_to broker_path(id:@broker), remote: true do%>
  <span class="glyphicon glyphicon-plus"></span> Add Education
  <%end%>

<%=form_for @education, remote:true  do |f|%>
    <table width="100%">
      <tr>
        <th>Start Date</th>
        <th>End Date</th>
      <tr>
        <td><%=f.date_select :begin_date,{:start_year => Date.current.year, :end_year => 1960,discard_day: true, include_blank: true}%></td>
        <td><%=f.date_select :end_date,:start_year => Date.current.year, :end_year => 1960,discard_day: true%></td>    

      </tr>
    </table><br>
    <table width="100%">
      <tr>
        <td width="40%"><%=f.label "School_Name"%></td>
        <td width="60%"><%=f.text_field :school, {style:"width:100%;"}%></td>
      </tr>
      <tr class="blank_row_small"></tr>
      <tr>
        <td><%=f.label "Degree_Name"%></td>
        <td><%=f.text_field :degree, {style:"width:100%;"}%></td>
      </tr>
      <tr class="blank_row_small"></tr>
      <tr>
        <td><%=f.label "Honors"%></td>
        <td><%=f.text_field :honors, {style:"width:100%;"}%></td>
      </tr>
      <tr class="blank_row_small"></tr>
      <tr>
        <td><%=f.label "Details"%></td>
        <td><%=f.text_area :description, {style:"width:100%;"}%></td>
      </tr>
      <tr>
        <td><%=f.submit "Add", class:"btn btn-default"%></td>
        <td><%=f.hidden_field :broker_id, value: @broker.id%>
        <%=f.hidden_field :edit, value: "education_add"%>
        </td>
      </tr>
    </table>
  <%end%>
<%else%>
  <%=link_to broker_path(id:@broker, edit:"education_add"), remote: true do%>
  <span class="glyphicon glyphicon-plus"></span> Add Education
  <%end%>
<%end%>
