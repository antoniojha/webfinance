
<%if @edit=="skills"%>
  <h4>Skills & Specialties
    <%=link_to broker_path(id:@broker), remote: true do%>
    <span class="glyphicon glyphicon-edit"></span>
    <%end%>
  </h4>
  <%=form_for @broker do |f|%>
  <%=f.text_area :skills, {class:"form-control"}%>
  <%=f.submit "Edit", class:"btn btn-default"%>
  <%end%>
<%else%>
  <h4>Skills & Specialties
    <%=link_to broker_path(id:@broker, edit:"skills"), remote: true do%>
    <span class="glyphicon glyphicon-edit"></span>
    <%end%>
  </h4>
  <%if @broker.skills%>
    <%=@broker.skills%>
  <%else%>
    None.
  <%end%>
<%end%>