<%provide :title, "|Register Page 1"%>
<%=form_for @broker,:url => url_for(:controller => 'register/brokers', :action => 'create') do |f|%>

<table width="70%">

  <tr>
    <td width="30%"><%=f.label :username%><%=asterisk_html%></td>
    <td width="70%"><%=f.text_field :username,{:class=>'form-control'}%></td>
  </tr> 
  <tr class="blank_row"></tr> 
  <tr>
  	<td><%= f.label :password %><%=asterisk_html%></td>
  	<td><%= f.password_field :password,{:class=>'form-control'} %></td>
  </tr>
  <tr class="blank_row"></tr> 
  
	<tr>
    <td><%= f.label :password_confirmation, "Password Confirmation" %><%=asterisk_html%></td>
  	<td><%= f.password_field :password_confirmation,{:class=>'form-control'} %></td>
  </tr>
  <tr class="blank_row"></tr> 
  <tr>
    <td colspan=2><%=f.submit "Create Account",:class=>"btn btn-primary"%></td>
    <td></td>
  </tr>
</table>
<%end%>