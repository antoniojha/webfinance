<% if @user.picture_file_name%>
  <% content_for (:head) do %>
    <script type="text/javascript">
      
      $(function(){
        $('#cropbox').Jcrop({
        onChange: update_crop,
        onSelect: update_crop,
        setSelect: [0, 0, 400,400],
          aspectRatio: 1
        });
      });
      function update_crop(coords) {
        var rx = 100/coords.w;
        var ry = 100/coords.h;
        $('#preview').css({
          width: Math.round(rx * <%= @user.picture_geometry(:large).width %>) + 'px',
          height: Math.round(ry * <%= @user.picture_geometry(:large).height %>) + 'px',
          marginLeft: '-' + Math.round(rx * coords.x) + 'px',
          marginTop: '-' + Math.round(ry * coords.y) + 'px'
        });


        var ratio = <%=@user.picture_geometry(:original).width %> / <%= @user.picture_geometry(:large).width %>; 
      
        $('#crop_x').val(Math.floor(coords.x * ratio));
        $('#crop_y').val(Math.floor(coords.y * ratio));
        $('#crop_w').val(Math.floor(coords.w * ratio));
        $('#crop_h').val(Math.floor(coords.h * ratio));   
      }
</script>
  <%end%>
<%end%>
<%if @user.picture_file_name && @crop!="true"%>
<%=render "change_dialog_form"%>
<%else%>
<%=render "upload_dialog_form"%>
<%end%>

