<!DOCTYPE html>
<html>
<head>
  <title>RichRly<%=yield :title%></title>
<link rel="stylesheet" href="https://code.jquery.com/ui/1.10.4/themes/smoothness/jquery-ui.css">
  <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true%>
  <script type="text/javascript" src="/assets/raphael.js"></script>
<script type="text/javascript" src="/assets/jquery.usmap.js"></script>
 
  <%= yield(:head)%>
  <%= csrf_meta_tags %>
  <!-- [if lt IE 9]>
  	<script src="http://html5shim.googlecode.com/svn/trunk/html15.js"></script>
  <![endif]-->
  <style>

  </style>
</head>
<body data-no-turbolink="true">
	<header class="navbar-default navbar-static-top" role="navigation">  
		  <%=render 'layouts/header'%>
	</header>
  <%if user_logged_in? && (params[:controller]=="users")%>
    <div class="navbar-default navbar-custom2 navbar-static-top" role="navigation">  
      <%=render partial:"profiles/top_menu",locals:{object:current_user,type:"users"} %>
	  </div>     
  <%end%>   
  <%if broker_logged_in? && (params[:controller]=="brokers")%>
    <div class="navbar-default navbar-custom2 navbar-static-top" role="navigation">  
      <%=render partial:"profiles/top_menu",locals:{object:current_broker,type:"brokers"} %>
	  </div>     
  <%end%>   
  <div align="center" class="body1">
    <div id='col_left' class=<%=column_width_left%> align="center">
      <%=yield :left%>

    </div>
    <div id='col_middle' class=<%=column_width_middle%> align="center">

      <% flash.each do|message_type, message|%>
      <div class="alert alert-<%=message_type%> <%=message_type%>"><%=message%></div>
      <%end%>
      <%=yield %>
    </div>

    <div id='col_right' class=<%=column_width_right%> align="center">
      <%=yield :right%>
    </div>  

	</div>    
  <%=render "layouts/footer"%>       
</body>
</html>
