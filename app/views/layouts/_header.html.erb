<div class="navbar-inner">
	<div class="container">			
    <% if params[:controller]=="static_pages"%>
    <ul class="navbar-nav nav pull-right">
      <li style="font-size:1.5em;"><%= link_to 'Sign In', user_login_path %></li>
      <li class="dropdown" style="font-size:1.5em;">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
          Financial Reps <b class="caret"></b>
        </a>
        <ul class="dropdown-menu">
          <li><%= link_to "Why Sign Up?","#"%></li>
          <li><%= link_to "Login", broker_login_path %></li>
          <li><%= link_to "Sign Up", register_signup_path %></li>
          <li><%= link_to "Registration Status",new_status_session_url%></li>
        </ul>
      </li>
    </ul>
    <%else%>
    <ul class="navbar-nav nav pull-left">
      <li class="navbar-text"><span class="logo"><%=image_tag("company_logo.png", size:"60x30")%></span></li>
    </ul>
    <ul class="navbar-nav nav pull-right">
      <% if user_logged_in?%>
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
          Account <b class="caret"></b>
        </a>
        <ul class="dropdown-menu">
          <%if current_user.admin%>
          <li><%= link_to 'Admin Home', admin_home_path%></li>
          <%end%>
          <li><%= link_to 'Profile', current_user %></li>
          <li><%= link_to 'Private Setting', edit_user_path(current_user)%></li>
          <li><%= link_to 'All Users', users_path%></li>
          <li class="divider"></li>
          <li><%= link_to 'Log Out',user_logout_path, method: "delete"%></li>
        </ul>
      </li>
      <%elsif broker_logged_in?%>
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
          Account <b class="caret"></b>
        </a>
        <ul class="dropdown-menu">
          <li><%= link_to 'Broker Profile', current_broker %></li>
          <li><%= link_to 'Private Setting', edit_broker_path(current_broker)%></li>
          <li><%= link_to 'All Users', users_path%></li>
          <li class="divider"></li>
          <li><%= link_to 'Log Out',broker_logout_path, method: "delete"%></li>
        </ul>
      </li>          
      <%end%>
    </ul>
    <%end%>
   </div>
</div>    