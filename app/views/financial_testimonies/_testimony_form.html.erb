
  <%=render partial: "financial_testimonies/error", locals:{testimony:testimony}%>
  
  <%=form_for testimony, remote:true do |f|%>
  <table width="80%">
    <tr>
      <td width="20%"><%=f.label "Title"%></td>
      <td width="80%">
        <%=f.text_field :title,{:style=>"width:100%;"}%>
      </td>
    </tr>
    <tr>
      <td><%=f.label "Category"%></td>
      <td>
        <%=f.select :financial_category, Order::FINANCIAL_CATEGORIES, {prompt:"Please Select Category"},{:style=>"width:100%;"}%>
      </td>
    </tr>
    <tr>
      <td><%=f.label "Vehicle"%></td>
      <td>
        <%=f.select :product_id, Product.all.collect {|p| [ p.name, p.id ] }, {prompt:"Please Select Vehicle"},{:style=>"width:100%;"}%>
      </td>
    </tr>
    <tr>
      <td style="vertical-align:top;"><%=f.label "Testimony"%></td>
      <td>
        <%=f.text_area :description, {rows:"12", :style=>"width:100%;"}%>
      </td>
    </tr>
    <tr>
      <%if testimony.new_record?%>
      <td><%=f.submit "Create Testimony"%></td>
      <%else%>
      <td><%=f.submit "Update Testimony"%></td>
      <%end%>
      <td><%=hidden_field_tag :user_id, @user.id%></td>
    </tr>
  </table>
  <%end%>
