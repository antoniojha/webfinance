<% if @change_vote%>
$("#story_heading").html("<%=escape_javascript render('financial_stories/story_heading')%>");
<%else%>
  <% unless @error==true%>
  $("#financial_stories").html("<%=escape_javascript render('brokers/profile/financial_stories')%>");
  $("#fin_story_display_<%=@fin_story.id%>").css({'background-color':'#C8C8C8'}).
  animate({'background-color':'white'},1000);
  $("#fin_story_edit_dialog_form").dialog("close");  
  <%else%>
  $("#fin_story_edit_dialog_form #fin_story_error_msg").html("<%=escape_javascript render partial:'brokers/profile/error', locals:{object:@fin_story}%>");
  <%end%>
<%end%>